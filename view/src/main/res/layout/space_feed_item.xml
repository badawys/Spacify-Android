<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="16dp"
        android:paddingStart="0dp">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_vote_up"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/base"
                android:textSize="20sp"
                android:text="0"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_vote_down"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/post_user_info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/user_photo"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    fresco:roundedCornerRadius="35dp"
                    fresco:placeholderImage="@color/iron"
                    android:layout_centerVertical="true"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/user_photo"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/post_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User Name"/>
                    <TextView
                        android:id="@+id/post_created_at"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="10 mins ago"
                        android:textSize="11sp"
                        android:textColor="@color/aluminum"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/post_content"
                android:layout_width="match_parent"
                android:layout_below="@id/post_user_info_layout"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/post_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/med_text"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/post_comments_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:layout_below="@id/post_content">

                <RelativeLayout
                    android:id="@+id/comments_users_photos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/comment_user_photo_1"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        fresco:roundedCornerRadius="15dp"
                        fresco:placeholderImage="@color/base"
                        android:layout_centerVertical="true" />
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/comment_user_photo_2"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        fresco:roundedCornerRadius="15dp"
                        fresco:placeholderImage="@color/aluminum"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="7.5dp"/>
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/comment_user_photo_3"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        fresco:roundedCornerRadius="15dp"
                        fresco:placeholderImage="@color/jumbo"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/comments_users_photos"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:text="0 comments"/>
            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>