<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="co.broccli.spacify.Space.CreateSpaceStep2Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorPrimary">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_space_step2_header"
                android:textSize="18sp"
                android:padding="16dp"
                android:textColor="@color/white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_space_step2_sub_header"
                android:textSize="12sp"
                android:padding="16dp"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_space_photo_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:clickable="true">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/space_pic_view"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                fresco:roundedCornerRadius="90dp"
                fresco:placeholderImage="@color/iron"
                android:layout_margin="16dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_space_picture"
                android:textColor="@color/aluminum"
                android:textAlignment="center"/>
        </LinearLayout>

        <EditText
            style="@style/FullWidthEditText"
            android:id="@+id/space_name_text_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edit_text_placeholder_space_name"/>

        <RadioGroup
            android:id="@+id/space_type_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">
            <RadioButton
                android:id="@+id/space_type_public"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/space_type_public"
                android:padding="16dp"/>
            <RadioButton
                android:id="@+id/space_type_private"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/space_type_private"
                android:padding="16dp"/>
        </RadioGroup>
    </LinearLayout>

</ScrollView>
